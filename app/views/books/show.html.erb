<%= render 'user_info',user: @user,book: Book.new %>

<div class = "col-md-8 offset-md-1">
  <h1>Book detail</h1>
      <table class = "table table-hover table-inverse">
      <tbody>
        <tr>
          <td>
            <%= image_tag @book.user.get_profile_image(100, 100) %><br>
            <%= link_to @book.user.name, user_path(@book.user) %>
          </td>
          <td>
            <%= link_to @book.title, book_path(@book) %>
          </td>
          <td>
            <%= @book.body %>
          </td>
          <td>
            <% if @book.user == current_user %>
            <%= link_to "Edit", edit_book_path(@book),class:"btn btn-sm btn-success edit book_30172" %>
            <% end %>
          </td>
          <td>
            <% if @book.user == current_user %>
            <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm"=>"本当に削除しますか？", class:"btn btn-sm btn-danger destroy_book_30172" %>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>